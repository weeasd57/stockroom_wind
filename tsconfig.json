{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "types": [
      "node"
    ],
    "forceConsistentCasingInFileNames": true,
    "maxNodeModuleJsDepth": 0,
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "*.ts",
    "*.tsx",
    "firebase.js",
    "src/types/*.d.ts",
    "src/types/globals.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "node_modules/**/*",
    "node_modules/.pnpm/@supabase+auth-helpers-nextjs*/**/*.json",
    "node_modules/.pnpm/@supabase+auth-helpers-nextjs*/tsconfig.json",
    "**/@supabase/auth-helpers-nextjs/tsconfig.json"
  ]
}
